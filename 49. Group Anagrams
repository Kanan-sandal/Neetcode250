class Solution {
public:
    vector<vector<string>> groupAnagrams(vector<string>& strs) {
        unordered_map<string,vector<string>> mp;
        for(string s:strs){
            string key=s;
            sort(key.begin(),key.end());
            mp[key].push_back(s);
        }
        vector<vector<string>> res;
        for(auto& entry:mp){
            res.push_back(entry.second);
        }
        return res;
    }
};




class Solution {
public:
    vector<vector<string>> groupAnagrams(vector<string>& strs) {
        unordered_map<string,vector<string>> mp;
        for(string s:strs){
            vector<int> freq(26,0);
            for(char c:s) freq[c-'a']++;
            string key;
            for(int n:freq){
                key+=to_string(n)+'#';
            }
            mp[key].push_back(s);
        }
        vector<vector<string>> res;
        for(auto& entry:mp){
            res.push_back(entry.second);
        }
        return res;
    }
};
